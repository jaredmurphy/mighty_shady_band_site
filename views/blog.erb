<div class="row">
  <div class="col s12 m3 xs12 card-panel dark_card">
    <h3 class="card_text"> The Band </h3>
    <h5><a class="card_text" href="/band/eric">Eric</a></h5>
    <h5><a class="card_text" href="/band/joel">Joel</a></h5>
    <h5><a class="card_text" href="/band/keenan">Keenan</a></h5>
    <h5><a class="card_text" href="/band/jared">Jared</a></h5>
    <h5><a class="card_text" href="/band/chris">Chris</a></h5>
  </div>
  <% @posts.each do |post| %>
    <div class="col s12 m9 xs12">
      <div class="card-panel dark_card">
        <a href=<%="/posts/#{post["id"]}"%>>
          <h2 class="card_text"> <%= post["title"] %> </h2>
          <img src=<%= post["img_url"]%> />
          <p class="card_text"> <%= post["body"] %></p>
        </a>
      </div>
    </div>
  <% end %>
</div> <!-- ends row -->
