<div id='contact-box' class="row">
  <div class="col s12 m6" id="contact-form">
    <% if @email_errors %>
      <h3><%= @email_errors %></h3>
    <% end %>
    <form action="/email" method="post" >
      <label>Subject</label>
      <select name="option" required="true">
         <option value="booking">Booking</option>
         <option value="promotions">Promotions</option>
         <option value="other">Other</option>
      </select>
      <label for="name">Your Name:</label>
      <input type="text" name="name" class="span4" placeholder="Your name" required="true" pattern=".{2,}">
      <label for="email">Your email address:</label>
      <input type="email" name="email" class="span4" placeholder="email@example.com" required="true">
      <label for="to">Your message:</label>
      <textarea name="message" cols='30' rows="10" required="true" pattern=".{3,}"></textarea><br>
      <button type="submit" class="btn" value="Send">Submit</button>
    </form>
  </div>
</div>
